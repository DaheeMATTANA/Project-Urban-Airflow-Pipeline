# top-most EditorConfig file
root = true

# Global defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# SQL
[*.sql]
indent_style = space
indent_size = 2
indent_final_newline = true

# JSON
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false